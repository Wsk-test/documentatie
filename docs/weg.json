{
    "routes": [
        {
            "route": "/*",
            "allowedRoles": [
                "beheerder",
                "sbn",
                "kredietbank"
            ]
        },
        {
            "route": "/aangemeld",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/aanmelden",
            "allowedRoles": [
                "anonymous"
            ]
        },
        {
            "route": "/afmelden",
            "redirect": "/.auth/logout"
        }
    ],
    "responseOverrides": {
        "401": {
            "redirect": "/aanmelden",
            "statusCode": 302
        },
        "403": {
            "rewrite": "/niet-geautoriseerd"
        },
        "404": {
            "rewrite": "/404.html"
        }
    },
    "auth": {
        "identityProviders": {
            "google": {
